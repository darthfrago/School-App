@{
    ViewBag.Title = "Index";
}


<section id="content">
    <div class="main padder">
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4 m-t-large">
                <section class="panel" style="border:solid; margin-top:50%">
                    <header class="panel-heading">
                        <strong>Sign in to your account</strong>
                    </header>
                    <form class="panel-body" action="/login" method="post">
                        @if (ViewBag.error != null)
                        {
                            <div class="alert alert-danger text-center" style="font-size:12px">
                                <i class="fa fa-warning fa-lg"></i><strong> @ViewBag.error</strong>
                            </div>
                        }
                        <div class="block">
                            <label class="control-label">Username</label>
                            <input type="text" placeholder="Admin" id="username" name="username" class="form-control">
                        </div>
                        <div class="block">
                            <label class="control-label">Password</label>
                            <input type="password" id="password" name="password" placeholder="Password" class="form-control">
                        </div>
                        <!--
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Keep me logged in
                            </label>
                        </div>
                        <a href="#" class="pull-right m-t-mini"><small>Forgot password?</small></a>-->
                        <button type="submit" class="btn btn-info">Sign in</button>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>
